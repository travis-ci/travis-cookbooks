# mongodb.conf

# Where to store the data.

# Note: if you run mongodb as a non-root user (recommended) you may
# need to create and set permissions for this directory manually,
# e.g., if the parent directory isn't mutable by the mongodb user.
dbpath=<%= @node[:mongodb][:datadir] %>

#where to log
logpath=<%= @node[:mongodb][:logfile] %>
logappend=true

port = <%= @node[:mongodb][:port] %>

<% if @node[:mongodb][:log_cpu_io] %>
# Enables periodic logging of CPU utilization and I/O wait
cpu = true
<% end %>

<% if @node[:mongodb][:auth] %>
# Turn on/off security.  Off is currently the default
auth = true
<% else %>
noauth = true
<% end %>

<% if @node[:mongodb][:verbose] %>
# Verbose logging output.
verbose = true
<% end %>

<% if @node[:mongodb][:objcheck] %>
# Inspect all client data for validity on receipt (useful for
# developing drivers)
objcheck = true
<% end %>

<% if @node[:mongodb][:quota] %>
# Enable db quota management
quota = true
<% end %>

<% if @node[:mongodb][:diaglog] %>
# Set oplogging level where n is
#   0=off (default)
#   1=W
#   2=R
#   3=both
#   7=W+some reads
diaglog = <%= @node[:mongodb][:diaglog] %>
<% end %>

<% if @node[:mongodb][:nocursors] %>
# Diagnostic/debugging option
nocursors = true
<% end %>

<% if @node[:mongodb][:nohints] %>
# Ignore query hints
nohints = true
<% end %>

<% if @node[:mongodb][:nohttp] %>
# Disable the HTTP interface (Defaults to localhost:27018).
nohttpinterface = true
<% end %>

<% if @node[:mongodb][:noscripting] %>
# Turns off server-side scripting.  This will result in greatly limited functionality
noscripting = true
<% end %>

<% if @node[:mongodb][:notablescan] %>
# Turns off table scans.  Any query that would do a table scan fails.
notablescan = true
<% end %>

<% if @node[:mongodb][:noprealloc] %>
# Disable data file preallocation.
noprealloc = true
<% end %>

<% if @node[:mongodb][:nssize] %>
# Specify .ns file size for new databases.
nssize = <%= @node[:mongodb][:nssize] %>
<% end %>

<% if @node[:mongodb][:mms] %>
  # Accout token for Mongo monitoring server.
  mms-token = <%= @node[:mongodb][:token] %>

  # Server name for Mongo monitoring server.
  mms-name = <%= @node[:mongodb][:name] %>

  # Ping interval for Mongo monitoring server.
  mms-interval = <%= @node[:mongodb][:interval] %>
<% end %>
