## Managed by Chef on <%= node.name %> :heart_eyes_cat:
## cookbook:: travis_build_environment
##     file:: templates/default/etc/cloud/cloud.cfg.erb

disable_root: true
preserve_hostname: false
manage_etc_hosts: template
cloud_init_modules:
- seed_random
- bootcmd
- write-files
- growpart
- resizefs
- set_hostname
- update_hostname
- update_etc_hosts
<% if node['travis_build_environment']['ssh_host_key_regen'] %>
- ssh
<% end %>
cloud_config_modules:
- emit_upstart
- apt-pipelining
- apt-configure
- runcmd
cloud_final_modules:
- scripts-vendor
- scripts-per-once
- scripts-per-boot
- scripts-per-instance
- scripts-user
