service git
{
        disable         = no
        socket_type     = stream
        wait            = no
        user            = nobody
        server          = <%= @git_daemon_binary %>
        server_args     = --base-path=<%= node["git"]["server"]["base_path"] %> <%= node['git']['server']['export_all'] ? '--export-all' : nil %> --syslog --inetd --verbose
        log_on_failure  += USERID
}
